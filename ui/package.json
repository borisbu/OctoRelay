    "eslint-plugin-allowed-dependencies": "^0.5.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unicorn": "^55.0.0",
    "happy-dom": "^14.12.3",
    "mockdate": "^3.0.5",
    "prettier": "3.3.3",
    "sass": "^1.77.8",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
